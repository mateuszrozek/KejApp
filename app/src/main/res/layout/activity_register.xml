<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.PortInfoActivity">

    <LinearLayout
        style="@style/VerticalLinearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/portNameLabel"
            style="@style/PortInfoTitle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejestracja"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/technicalInfoLabel"
            style="@style/PortInfoSubtitle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Dane kapitana" />

        <RelativeLayout
            style="@style/HorizontalRelativeLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AttributLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Imię"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputName"
                style="@style/ValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textPersonName" />

        </RelativeLayout>
        <RelativeLayout
            style="@style/HorizontalRelativeLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AttributLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Nazwisko"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputSurname"
                style="@style/ValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textPersonName" />

        </RelativeLayout>
        <RelativeLayout
            style="@style/HorizontalRelativeLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AttributLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Email"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputEmail"
                style="@style/ValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textEmailAddress" />

        </RelativeLayout>
        <RelativeLayout
            style="@style/HorizontalRelativeLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AttributLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Hasło"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputPassword"
                style="@style/ValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textPassword" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/HorizontalRelativeLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AttributLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Powtórz hasło"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputRepeatPassword"
                style="@style/ValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textPassword" />

        </RelativeLayout>


        <TextView
            style="@style/PortInfoSubtitle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Dane o łajbie i majtkach"
            android:textSize="20sp" />

        <RelativeLayout
            style="@style/HorizontalRelativeLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AttributLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Nazwa łajby"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputBoatName"
                style="@style/ValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textPersonName" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/HorizontalRelativeLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AttributLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Ilość osób"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputPeopleQuantity"
                style="@style/ValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="numberSigned" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/HorizontalRelativeLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AttributLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Szerokość"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputBoatWidth"
                style="@style/ValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="numberDecimal" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/HorizontalRelativeLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AttributLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Długość"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputBoatLength"
                style="@style/ValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="numberDecimal" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/HorizontalRelativeLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AttributLabel"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Zanurzenie"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputBoatDepth"
                style="@style/ValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="numberDecimal" />
        </RelativeLayout>

        <Button
            android:id="@+id/portInfoButton"
            style="@style/OrderQuayButton"
            android:text="Zarejestruj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>
